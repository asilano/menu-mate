= turbo_stream.update "leftover-list" do
  h2 Leftovers
  .header-row
    .field.name Kind
    .field.actions
  = render partial: "leftovers/leftover", collection: @leftovers, locals: { new_leftover_id: @new_leftover.id }

- if @another
  = turbo_stream.replace "modal" do
    = render partial: "shared/taglike_modal"
- else
  = turbo_stream.dispatch "close", target: "modal-inner"
