{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.2",
    "esbuild": "^0.16.0",
    "esbuild-plugin-stimulus": "^0.1.5",
    "sass": "^1.70.0"
  },
  "scripts": {
    "notbuild": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build": "node esbuild.config.js",
    "notbuild:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  }
}
